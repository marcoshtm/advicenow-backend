package advicenow.domain.message;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class MessageController {

	@Autowired
	private MessageRepository repository;
	
	@RequestMapping("/getMessageById")
    public Message getMessageById(@RequestParam(value="messageId", defaultValue="1") String messageIdStr) {
		return this.repository.findByMessageId(Long.parseLong(messageIdStr));
    }
}